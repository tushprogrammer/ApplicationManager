<!DOCTYPE html>
<html lang="en" ng-app="MyApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Главная страница</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ApplicationManager.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom">
            <div class="container-fluid">
                <div style="width: 40%">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">#SkillProfi</a> @*название проекта в углу, ссылка первую страницу*@
                </div>
                <div style="width: 60%"> @await Component.InvokeAsync("HeaderButtView") </div>
            </div>
        </nav>
    </header>
    <div class="container-main">
        <main role="main" class="pb-3">
            @RenderBody()

        </main>
    </div>




    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - #SkillProfi - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

