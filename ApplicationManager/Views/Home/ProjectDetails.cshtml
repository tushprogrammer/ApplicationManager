@model DetailsProjectModel
@{
    ViewData["Title"] = $"Страница {Model.Name_page}";
}

<div class="navigation-history">
    <p>
        <a asp-action="Index">Главная</a> -> <a asp-action="project">@Model.Name_page</a> -> @Model.NameCompany
    </p>
</div>
<div class="article-container">
    <div class="article-content">
        <h2>@Model.Title</h2>
        <hr />
        <p>@Model.Description</p>
    </div>
    <div class="article-image" style="background-image: url(@Model.ImgSrc)">
    </div>
</div>