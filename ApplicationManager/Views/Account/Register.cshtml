@using ApplicationManager.AuthApp
@model UserRegistration
@{
    ViewData["Title"] = "Регистрация";
    string button_text;
    if (User.IsInRole("Admin"))
    {
        Layout = "_Layout-admin";
        button_text = "Добавить пользователя";
    }
    else
    {
        Layout = "_Layout";
        button_text = "Зарегистрироваться";
    }
}

<div class="pad-top">
    <div class="row-account">
        <div class="col-md-6 col-md-offset-3 well">
            <h3 class="text-center">Регистрация</h3>

            <form asp-action="Register" asp-antiforgery="true" class="form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>               
                <div class="col-xs-12">
                    <div class="form-group">
                        <input asp-for="LoginProp" class="form-control" placeholder="Логин" />
                    </div>
                </div>

                <div class="col-xs-12">
                    <div class="form-group">
                        <input asp-for="Password" class="form-control" placeholder="Пароль" />
                    </div>
                </div>

                <div class="col-xs-12">
                    <div class="form-group">
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Продублируйте пароль" />
                    </div>
                </div>
                <input asp-for="IsAdmin" value="true" type="hidden" />
                <div class="text-center col-xs-12">
                    <button type="submit" class="btn btn-primary">@button_text</button>
                </div>
            </form>

        </div>
    </div>
</div>